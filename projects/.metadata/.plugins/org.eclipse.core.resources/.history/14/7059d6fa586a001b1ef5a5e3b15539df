	@Override
	public void AddBi(List<Bicycles>) throws SQLException {
		


		String sii ="INSERT * From bicyclestoreschema. INTO 'bicycles'(bimodel, biavailable, biname) "
				+ "VALUES(?,?,?)";
		
		
		try (Connection connection = Connector.get_connection())
		{	
				
		PreparedStatement preparedStatemnet = connection.prepareStatement(sii);
		ResultSet rs = preparedStatemnet.executeQuery();
				
			for(Bicycles bicycles: List) 
			{
				sii.setString(1, bicycles.getBimodel());
				sii.setString(2, bicycles.getBiavailable());
				sii.setString(3, bicycles.getBiname());
					sii.addBatch();
					sii.executeBatch();
			
		}
		
		
	}
	
	

}

